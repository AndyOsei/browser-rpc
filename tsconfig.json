{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "rootDir": "src",
    "outDir": "./core",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2016", "es2017"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "core",
    "node_modules",
    "**/*.stories.*",
  ]
}
